<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%=@movie.title%>
                </h1>
            </div>

        </div>
        <div class="row">

            <div class="col-md-4">
                <img class="img-responsive" src=<%=@movie.poster_thumbnail%>>
            </div>

            <div class="col-md-8">
                <h3>Synopsis</h3>
                <p><%=@movie.synopsis%></p>
                <h3>Details</h3>
                
                	<h4>Critics Rating: <%=@movie.critics_score%></h4>
                    <h4>Audience Rating: <%=@movie.audience%></h4>
                    <h4>Year: <%=@movie.year%></h4>
                    <h4>Rating: <%=@movie.mpaa_rating%></h4>
                    <h4>Runtime: <%=@movie.runtime%></h4>
                    <h4>Release Date: <%=@movie.release_date%></h4>
                    <h4>IMDB: <%=link_to( @movie.title, "http://www.imdb.com/title/tt#{@movie.imdb}")%></h4>         
            </div>

        </div>
    
    </div>

</body>
