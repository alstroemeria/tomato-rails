<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%=@movie.title%>
                </h1>
            </div>

        </div>
        <div class="row">

            <div class="col-md-4">
                <img class="img-responsive" src=<%=@movie.poster_thumbnail%>>
            </div>

            <div class="col-md-8">
                <h3>Synopsis</h3>
                <p><%=@movie.synopsis%></p>
                <h3>Details</h3>
                <ul>
                    <li>Year: <%=@movie.year%></li>
                    <li>Rating: <%=@movie.mpaa_rating%></li>
                    <li>Runtime: <%=@movie.runtime%></li>
                    <li>Release Date: <%=@movie.release_date%></li>
                    <li>imdb: <%=@movie.imdb%></li>

                </ul>
            </div>

        </div>
    
    </div>

</body>
