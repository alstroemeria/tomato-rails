<body>
    <div class="intro-header">

        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Welcome</h1>
                        <h3>Find the movies you want to watch</h3>
                        
                      
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <div class="content-section-a">

        <div class="container">
             <div class="row">

                <div class="col-lg-12">
                    <h1 class="page-header">Top Box Office </h1>
                </div>

            </div>

            <%for i in 1..8%>
                <%movie = @box_office[i]%>
                    <%if i.odd?%>
                        <div class="row">
                            <div class="col-lg-2 col-md-2">
                                <a href="#">
                                    <img class="img-responsive" src=<%= movie.poster_detail %>  alt="">
                                </a>
                            </div>

                            <div class="col-lg-4 col-md-4">
                                <h3><%= movie.title %></h3>
                                <h4><%= movie.critics_rating %></h4>
                                <p><%= movie.critics_consensus %></p>
                                <a class="btn btn-primary" href=<%=movie_path(movie)%>>View Movie</a>
                            </div>
                        
                    <%else%>
                            <div class="col-lg-2 col-md-2">
                                <a href="#">
                                    <img class="img-responsive" src=<%= movie.poster_detail %>  alt="">
                                </a>
                            </div>

                            <div class="col-lg-4 col-md-4">
                                <h3><%= movie.title %></h3>
                                <h4><%= movie.critics_rating %></h4>
                                <p><%= movie.critics_consensus %></p>
                                <a class="btn btn-primary" href=<%=movie_path(movie)%>>View Movie</a>
                            </div>
                        </div>
                        <hr> 
                    <%end%>
            <%end%>
            </div>

    </div>

 

</body>

